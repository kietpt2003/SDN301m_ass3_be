                    },
                    body: JSON.stringify(orchid)
                })
                    .then(response => {
                        return response.json(); // Parse the JSON in the response
                    })
                    .then(data => {
                        // Access the data returned from the server
                        console.log('arrOrchids:', data.arrOrchids);
